<main class="beforeForm beforeForm--registration">
  <section class="container">
    <div class="beforeForm__contents">

      <h1>新規登録</h1>

      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>

        <%= render 'partial/error_messages', model: f.object %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "ネーム", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :age, "生年月日" %>
          <%= f.date_field :age, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.select :sex,[["男性", "男性"], ["女性", "女性"], ["その他", "その他"]], autofocus: true, placeholder: "性別", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn" %>
        </div>
      <% end %>

      <p>
        または
        <%= link_to "ログイン", new_user_session_path %>
      </p>

    </div>
  </section>
</main>
