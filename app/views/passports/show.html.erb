<div class="passport-wrapper">
  <div class="container">
    <div class="passport-top">
      <% if @passport.passport_image.file.nil? %>
        <%= image_tag 'dumbo_default.png', class: "passport-image" %>
      <% else %>
        <%= image_tag @passport.passport_image.url, class: "passport-image" %>
      <% end %>
    </div>

    <div class="passport-main">
      <div class="passport-left">
        <div class="passport-purpose">
          <h4><%= @passport.purpose %></h4>
          <h6><%= @passport.goal %></h6>
          <p><%= @passport.plans.first.start_time.strftime("%Y/%m/%d") %>
              ~ <%= @passport.plans.first.end_time.strftime("%Y/%m/%d") %><span><%= @passport.genre.name %></span></p>
        </div>
        <div class="passport-calender">
          <%= month_calendar do |date| %>
            <% if date.strftime("%Y-%m-%d") <= Time.now.strftime("%Y-%m-%d") %>
              <div　class="calender-check">
                <% if @passport.schedules.nil? %>
                  <%= form_with model: [current_user, @passport, Schedule.new] do |f| %>
                    <%= f.hidden_field :passport_id, value: @passport.id %>
                    <%= f.hidden_field :user_id, value: current_user.id %>
                    <%= f.hidden_field :day, value: date %>
                    <%= f.hidden_field :comprate, value: true %>
                    <%= f.submit "○" %>
                  <% end %>
                <% else %>
                  <% schedule = @schedules.find_by(day: date.strftime("%Y-%m-%d")) %>
                  <% if schedule.nil? %>
                    <%= form_with model: [current_user, @passport, Schedule.new] do |f| %>
                      <%= f.hidden_field :passport_id, value: @passport.id %>
                      <%= f.hidden_field :user_id, value: current_user.id %>
                      <%= f.hidden_field :day, value: date %>
                      <%= f.hidden_field :comprate, value: true %>
                      <%= f.submit "-" %>
                    <% end %>
                  <% elsif schedule.comprate == true %>
                    <%= link_to "○", user_passport_schedule_path(current_user, @passport.id, schedule.id), method: :delete %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
            <% if Time.now.strftime("%Y-%m-%d") == date.strftime("%Y-%m-%d") %>
              <div class="calendar-color">
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="passport-right">
        <p class="right-header">習慣化方法</p>
        <strong>
          <%= render partial: "passports/psychology", collection: @passport.psychologies, as: :psychology %>
        </strong>
        <button type="button" class="psychology-btn" data-toggle="modal" data-target="#exampleModalLong">
          <p><span>+</span>新規登録</p>
        </button>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<%= form_with(model: @passport, url: user_passport_path(current_user, current_user.passports.first.id), local: true ) do |f| %>
  <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.collection_check_boxes :psychology_ids, Psychology.all, :id, :title do |b| %>
            <%= b.label {b.check_box + b.text} %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary"><%= f.submit "Save changes"%></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
