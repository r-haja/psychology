<main class="passport">
  <section class="container">

    <div class="passport__header">
      <% if @passport.passport_image.file.nil? %>
        <%= image_tag 'img_passport_header.jpg' %>
      <% else %>
        <%= image_tag @passport.passport_image.url %>
      <% end %>
    </div>

    <div class="passport__contents">
      <div class="contents">
        <div class="habit">
          <h1 class="habit__purpose"><%= @passport.purpose %></h1>
          <h2 class="habit__goal"><%= @passport.goal %></h2>
          <div class="habit__details">
            <p class="period">2020/03/01〜2020/06/01</p>
            <p class="genre"><%= @passport.genre.name %></p>
          </div>
          <div class="habit__details">
            <p class="percentage">今週の達成率<span>20</span>%</p>
            <p class="percentage">今月の達成率<span>70</span>%</p>
            <a href="#" class="trash"><%= image_tag 'icon_trash.png' %></a> 
          </div>

        </div>

        <!-- <div class="passport-user">
          <%= link_to user_path(@passport.user), class: "no-text-decoration" do %>
            <% if current_user.profile_image.file.nil? %>
              <%= image_tag 'dumbo_default.png', class: "post-profile-icon" %>
            <% else %>
              <%= image_tag current_user.profile_image.url, class: "post-profile-icon"  %>
            <% end %>
          <% end %>
          <%= link_to user_path(@passport.user), class: "black-color no-text-decoration post-user-name",
            title: @passport.user.name do %>
            <strong><%= @passport.user.name %></strong>
          <% end %>
        </div>
        <div class="passport-calender">

        </div> -->
      </div><!-- contents -->

      <div class="contents">
        <div class="methods">
          <p class="methods__label">習慣化方法</p>
          <%= render partial: "passports/psychology", collection: @passport.psychologies, as: :psychology %>
          <button type="button" class="psychology-btn" data-toggle="modal" data-target="#exampleModalLong">
            <span>＋</span>
            新規登録
          </button>
        </div>
      </div><!-- contents -->

    </div>
  </section>
</main>


<!-- Modal -->
<%= form_with(model: @passport, url: user_passport_path(current_user, current_user.passports.first.id), local: true ) do |f| %>
  <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.collection_check_boxes :psychology_ids, Psychology.all, :id, :title do |b| %>
            <%= b.label {b.check_box + b.text} %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary"><%= f.submit "Save changes"%></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
