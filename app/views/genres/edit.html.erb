<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
      </div>
      <div class="card-body">
        <%= form_with model: @genre, class: " p-0 border-0", local: true do |f| %>
          <div class="form-group row mt-2">
            <div class="col-md-10">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control border-0", placeholder: "ジャンルを記載" %>
            </div>
          <%= f.submit "作成する", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
